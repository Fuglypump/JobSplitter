<?xml version="1.0" encoding="utf-8"?>

<Patch>
  <!-- VGP Garden Tools -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>VGP Garden Tools</li>
    </mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
			  <xpath>*/WorkGiverDef[defName = "GT_WorkGiver_FillUniversalFermenter"]/workType</xpath>
			  <value>
				<workType>Brewing</workType>
			  </value>
			</li>
			<li Class="PatchOperationReplace">
			  <xpath>*/WorkGiverDef[defName = "GT_WorkGiver_TakeProductOutOfUniversalFermenter"]/workType</xpath>
			  <value>
				<workType>Brewing</workType>
			  </value>
			</li>
		</operations>
	</match>
  </Operation>
</Patch>
