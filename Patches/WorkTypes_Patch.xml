<?xml version="1.0" encoding="utf-8" ?>
<Patch>

		<!-- Replace Tooltips (English only) -->

		<Operation Class="PatchOperationReplace">
			<xpath>*/WorkTypeDef[defName = "Doctor"]/description</xpath>
			<value>
				<description>Treat the sick, bring them food and cheer them up. Doctors will care for both colonists and prisoners.</description>
			</value>
		</Operation>
		
		<Operation Class="PatchOperationReplace">
			<xpath>*/WorkTypeDef[defName = "Handling"]/description</xpath>
			<value>
				<description>Harvest resources from and slaughter animals.</description>
