<?xml version="1.0" encoding="utf-8"?>

<Patch>
	<!-- Vanilla Expanded Framework -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Expanded Framework</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "IP_InsertFirstIngredient"]/workType</xpath>
					<value>
						<workType>Brewing</workType>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "IP_InsertSecondIngredient"]/workType</xpath>
					<value>
						<workType>Brewing</workType>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "IP_InsertThirdIngredient"]/workType</xpath>
					<value>
						<workType>Brewing</workType>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "IP_RemoveProduct"]/workType</xpath>
					<value>
						<workType>Brewing</workType>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "IP_RemoveProduct"]/priorityInType</xpath>
					<value>
						<priorityInType>30</priorityInType>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/WorkGiverDef[defName = "VEF_DestroyItems"]/workType</xpath>
					<value>
						<workType>Mortifying</workType>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
