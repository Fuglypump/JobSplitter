<?xml version="1.0" encoding="utf-8"?>

<Patch>
  <!-- Medieval Overhaul -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName = "DankPyon_DoBillsFurnace"]/workType</xpath>
				<value>
					<workType>Smelting</workType>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName = "DankPyon_DoBillsButcherFlesh"]/workType</xpath>
				<value>
					<workType>Butchering</workType>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName = "DankPyon_DoBillsStonecut"]/workType</xpath>
				<value>
					<workType>StoneCutting</workType>
				</value>
			</li>
		</operations>
	</match>	
  </Operation>
</Patch>
